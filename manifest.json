{
	"manifest_version": 2,
	"name": "Rainy NewTab",
	"version": "1.0.0",
	"description": "A neat new tab extension for chrome",

	"icons": {
		"16": "app/images/icons/icon16.png",
		"48": "app/images/icons/icon48.png",
		"128": "app/images/icons/icon128.png"
	},

	"background": {
		"scripts": ["app/index.js"],
		"persistent": false
	},

	"browser_action": {
		"default_title": "New Tab",
		"default_icon": "app/images/icons/icon128.png"
	},

	"chrome_url_overrides" : {
		"newtab": "dist/index.html"
	},

	"permissions": [
		"storage",
		"unlimitedStorage",
		"https://wxdata.weather.com/"
	]
}
